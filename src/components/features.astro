---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Desarrollo Web",
    description:
      "Convierte tu presencia en línea en una experiencia excepcional con nuestro servicio de desarrollo web, diseñado para destacar tu marca y cautivar a tus clientes desde el primer clic.",
    icon: "mdi:laptop-account",
  },
  {
    title: "Aplicaciones Móviles",
    description:
      "Lleva tu negocio al siguiente nivel con nuestra experiencia en desarrollo de aplicaciones móviles. Conecta con tus clientes dondequiera que estén.",
    icon: "mdi:mobile-phone-settings-variant",
  },
  {
    title: "Redes e Infraestructura",
    description:
      "Optimiza la conectividad de tu empresa con nuestra solución de redes: rápida, confiable y adaptada a tus necesidades.",
    icon: "mdi:local-area-network-connect",
  },
  {
    title: "Instalación de Software",
    description:
      "Maximiza la eficiencia de tu empresa con este servicio. Confía en nosotros para mantener tu negocio en funcionamiento.",
    icon: "mdi:gear-play",
  },
  {
    title: "Asesoría Especializada",
    description:
      "Transforma tu negocio con nuestra asesoría tecnológica: soluciones innovadoras para impulsar tu crecimiento y éxito digital",
    icon: "mdi:user-details",
  },
  {
    title: "Equipos Cómputo",
    description:
      "Equipa tu empresa con tecnología de vanguardia. Descubre nuestra amplia selección de equipos informáticos para potenciar tu productividad.",
    icon: "mdi:laptop",
  },
  
];
---

<ContentSection title="Servicios" id="features">
  <Fragment slot="lead">
   
    
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
